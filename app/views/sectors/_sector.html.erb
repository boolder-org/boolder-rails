<li class="px-4 sm:-mx-2 sm:px-2 hover:bg-gray-50 rounded-lg">
  <%= link_to sector_path(sector), class: "flex justify-between items-center" do %>
    <div class="flex justify-between py-2">
      <div>
        <%= sector_circle_view(sector) %>
        <span class="ml-2">Sector <%= sector.name %></span>
        <% if show_area %>
          <span class="ml-2 text-gray-400"><%= sector.main_area&.name %></span>
        <% end %>
      </div>
    </div>
    <span class="flex">
      <% if sector.dangerous? %>
        <span class="flex text-red-500 mr-2" title="<%= t("sector.dangerous") %>">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </span>
      <% end %>
      <% if sector.beginner_friendly? %>
        <span class="flex text-emerald-500 mr-2" title="<%= t("sector.beginner_friendly") %>">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </span>
      <% end %>
      <span class="text-gray-500"><%= sector.average_grade %></span>
    </span>
  <% end %>
</li>
