<% set_meta_tags title: t("views.homepage.metas.title") %>
<% set_meta_tags description: t("views.homepage.metas.description") %>

<% set_meta_tags og: { type: "website", image: image_url("hero-homepage.jpg") } %>

<div class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto relative">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-20 xl:pb-24 ">
      <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
        <polygon points="50,0 100,0 50,100 0,100" />
      </svg>


      <main class="pt-8 mx-auto max-w-7xl px-4 sm:pt-10 sm:px-6 md:pt-12 lg:pt-16 lg:px-8 xl:pt-20">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="inline"><%= t("views.homepage.title1") %></span>
            <span class="block text-emerald-600 xl:inline"><%= t("views.homepage.title2") %></span>
          </h1>
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            <%= t("views.homepage.subtitle") %>
          </p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-md shadow">
              <a href="<%= map_path %>" class="flex w-full items-center justify-center rounded-md border border-transparent bg-emerald-600 px-8 py-3 text-base font-medium text-white hover:bg-emerald-700 md:py-4 md:px-10 md:text-lg">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                  <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd">
                  </path>
                </svg>
                <span class="ml-2"><%= t("views.homepage.see_map") %></span>
              </a>
            </div>
          </div>

        </div>
      </main>
    </div>
    <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <%= image_tag "hero-homepage.jpg", class: "h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" %>
    </div>
  </div>
  
</div>

<div class="border-t ">

  <div class="max-w-7xl mx-auto py-8">

    <h2 class="px-4 sm:px-6 lg:px-8 text-2xl font-bold text-gray-900"><%= t("views.homepage.popular_areas") %></h2>

    <div class="py-2 relative">
      <div class="flex flex-nowrap overflow-x-auto py-4 space-x-2 px-4 sm:px-6 lg:px-8">
        <% Area.with_ids_keep_order(@popular_areas_ids).each do |area| %>
          <%= link_to area_path(area) do %>
            <%= render 'shared/area_card', area: area %>
          <% end %>
        <% end %>
        <div class="pr-16">&nbsp;</div>

        <div class="hidden lg:block inset-y-0 right-0 flex bg-gradient-to-l from-gray-100 pl-8 pr-8 pointer-events-none absolute"></div>
      </div>
    </div>

    <a href="<%= areas_path %>" class="place-self-center">
      <div class="px-4 sm:px-6 lg:px-8 text-emerald-500 flex space-x-2">

        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 ">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div><%= t("views.homepage.all_areas") %></div>
      </div>
    </a>

  </div>

</div>


<div class="relative border-t bg-white">
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
    <div class="mx-auto grid max-w-lg gap-5 lg:max-w-none lg:grid-cols-3">

      <a href="<%= sector7a_path %>" class="mt-2 block">
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
          <div class="flex-shrink-0">
            <%= image_tag "sector7a-cover.jpg", class: "h-48 w-full object-cover"  %>
          </div>

          <div class="flex flex-1 flex-col justify-between p-6">
            <div class="flex-1">
              <p class="text-xl font-semibold text-gray-900"><%= t("views.homepage.promoted.sector7a.title") %></p>
              <p class="mt-3 text-base text-gray-500"><%= t("views.homepage.promoted.sector7a.subtitle") %></p>
              <p class="mt-3 text-base text-emerald-500"><%= t("views.homepage.promoted.sector7a.cta") %></p>
            </div>
          </div>
        </div>
      </a>
      
      <a href="<%= app_path %>" class="mt-2 block">
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
          <div class="flex-shrink-0">
            <%= image_tag "banner-app-outdoors.jpg", class: "h-48 w-full object-cover"  %>
          </div>

          <div class="flex flex-1 flex-col justify-between p-6">
            <div class="flex-1">
              <p class="text-xl font-semibold text-gray-900"><%= t("views.homepage.promoted.app.title") %></p>
              <p class="mt-3 text-base text-gray-500"><%= t("views.homepage.promoted.app.subtitle") %></p>
              <p class="mt-3 text-base text-emerald-500"><%= t("views.homepage.promoted.app.cta") %></p>
            </div>
          </div>
        </div>
      </a>

      <a href="<%= beginners_guide_path %>" class="mt-2 block">
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
          <div class="flex-shrink-0">
            <%= image_tag "banner-shoes.jpg", class: "h-48 w-full object-cover"  %>
          </div>

          <div class="flex flex-1 flex-col justify-between p-6">
            <div class="flex-1">
              <p class="text-xl font-semibold text-gray-900"><%= t("views.homepage.promoted.beginners_guide.title") %></p>
              <p class="mt-3 text-base text-gray-500"><%= t("views.homepage.promoted.beginners_guide.subtitle") %></p>
              <p class="mt-3 text-base text-emerald-500"><%= t("views.homepage.promoted.beginners_guide.cta") %></p>
            </div>
          </div>
        </div>
      </a>

      <a href="<%= about_path %>" class="mt-2 block">
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
          <div class="flex-shrink-0">
            <%= image_tag "hero-about.jpg", class: "h-48 w-full object-cover"  %>
          </div>

          <div class="flex flex-1 flex-col justify-between p-6">
            <div class="flex-1">
              <p class="text-xl font-semibold text-gray-900"><%= t("views.homepage.promoted.about.title") %></p>
              <p class="mt-3 text-base text-gray-500"><%= t("views.homepage.promoted.about.subtitle") %></p>
              <p class="mt-3 text-base text-emerald-500"><%= t("views.homepage.promoted.about.cta") %></p>
            </div>
          </div>
        </div>
      </a>

    </div>
  </div>
</div>

