<% set_meta_tags title: t("views.homepage.metas.title") %>
<% set_meta_tags description: t("views.homepage.metas.description") %>

<% set_meta_tags og: { type: "website", image: image_url("hero-homepage.jpg") } %>


<div class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto relative">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32 ">
      <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
        <polygon points="50,0 100,0 50,100 0,100" />
      </svg>


      <main class="pt-10 mx-auto max-w-7xl px-4 sm:pt-12 sm:px-6 md:pt-16 lg:pt-20 lg:px-8 xl:pt-28">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="inline"><%= t("views.homepage.title1") %></span>
            <span class="block text-green-600 xl:inline"><%= t("views.homepage.title2") %></span>
          </h1>
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            <%= t("views.homepage.subtitle") %>
          </p>
          
        </div>
      </main>
    </div>
    <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <%= image_tag "hero-homepage.jpg", class: "h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" %>
    </div>
  </div>
  
</div>

<div class="border-t ">

  <div class="max-w-7xl mx-auto py-8">

    <h2 class="px-4 sm:px-6 lg:px-8 text-2xl font-bold text-gray-900"><%= t("views.homepage.areas_for_beginners") %></h2>

    <div class="py-2 relative">
      <div class="flex flex-nowrap overflow-x-auto py-4 space-x-4 px-4 sm:px-6 lg:px-8">
        <% @beginner_areas.each do |area, count| %>
          <%= link_to area_path(area) do %>
            <%= render 'shared/area_card', area: area %>
          <% end %>
        <% end %>
        <div>&nbsp;</div>

        <div class="inset-y-0 right-0 flex bg-gradient-to-l from-gray-100 pl-8 pr-8 pointer-events-none absolute"></div>
      </div>
    </div>

    <a href="<%= areas_path %>" class="place-self-center">
      <div class="px-4 sm:px-6 lg:px-8 text-green-500 flex space-x-2">

        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 ">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div><%= t("views.homepage.all_areas") %></div>
      </div>
    </a>

  </div>

</div>
