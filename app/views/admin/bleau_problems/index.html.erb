<h2 class="text-2xl font-bold mt-8 mb-4 pt-4 px-4 sm:px-0">Waiting for import</h2>

<div class="flex flex-col my-6">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grade</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ascents</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @bleau_problems.each do |bleau_problem| %>
              <tr class="place-content-start align-top h-16">
                <td class="px-6 py-2 whitespace-nowrap w-1/12">
                  <div class="text-sm text-gray-500"><%= bleau_problem.id %></div>
                </td>
                <td class="px-6 py-2 whitespace-nowrap w-3/12">
                  <div class="text-sm text-gray-900">
                    <%= link_to bleau_problem.name_with_fallback, "https://bleau.info/c/#{bleau_problem.id}.html", target: "_blank" %>
                  </div>
                </td>
                <td class="px-6 py-2 whitespace-nowrap w-1/12">
                  <span class="ml-1 text-gray-500"><%= bleau_problem.grade %></span>
                </td>
                <td class="px-6 py-2 whitespace-nowrap w-4/12">
                  <div class="text-gray-500"><%= bleau_problem.ascents %></div>
                </td>
                <td class="px-6 py-2 whitespace-nowrap w-1/12"><%= bleau_problem.bleau_area.area.name %></td>
                <td class="px-6 py-0 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= button_to bleau_problem.ignore ? "Unignore" : "Ignore",
                        toggle_ignore_admin_bleau_problem_path(bleau_problem, ignore: !bleau_problem.ignore),
                        method: :post,
                        class: "text-emerald-600 hover:text-emerald-900" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<p><%= "#{@bleau_problems.count} results" %></p>

