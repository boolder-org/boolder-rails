<% set_meta_tags title: t("views.articles.top_areas.beginner.metas.title") %>
<% set_meta_tags og: { type: "website", image: image_url("hero-homepage.jpg") } %>

 <div class="bg-white">
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">

    <div class="text-lg max-w-prose mx-auto mb-16">
      <span class="mt-3 sm:mt-4 block text-base text-center text-green-600 font-semibold tracking-wide uppercase">
        <%= t("views.articles.top_areas.discover_fontainebleau") %>
      </span>
      <h1>
        <span class="mt-2 block text-3xl text-center leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          <%= t("views.articles.top_areas.beginner.title") %>
        </span>
      </h1>
    </div>
    <div class="mt-6 prose prose-green prose-lg text-gray-500 mx-auto">
      <%= render "articles/top_areas_beginner/p1" %>
    </div>
  </div>

  <div class="max-w-3xl mx-auto">
    <div class="py-2 relative">
      <div class="flex flex-nowrap overflow-x-auto py-4 space-x-4 px-4 sm:px-6 lg:px-8">
        <% @beginner_areas.each do |area| %>
          <%= link_to area_path(area) do %>
            <%= render 'shared/area_card', area: area %>
          <% end %>
        <% end %>
        <div class="pr-16">&nbsp;</div>
        <div class="inset-y-0 right-0 flex bg-gradient-to-l from-white pl-8 pr-8 pointer-events-none absolute"></div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto pb-8 px-4 sm:px-6 lg:px-8">
    <div class="mt-2 prose prose-green prose-lg text-gray-500 mx-auto">

      <p class=" flex justify-end">
        <%= link_to t("views.articles.top_areas.beginner.more_areas"), areas_path %>
      </p>

      <h2>
        <%= t("views.articles.top_areas.beginner.to_read") %>
      </h2>

    </div>

    <div class="mx-auto grid max-w-3xl gap-5 lg:grid-cols-2 px-4 py-8">
      <a href="<%= beginners_guide_path %>" class="mt-2 block">
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
          <div class="flex-shrink-0">
            <%= image_tag "banner-shoes.jpg", class: "h-48 w-full object-cover"  %>
          </div>

          <div class="flex flex-1 flex-col justify-between p-6">
            <div class="flex-1">
              <p class="text-xl font-semibold text-gray-900"><%= t("views.homepage.promoted.beginners_guide.title") %></p>
              <p class="mt-3 text-base text-gray-500"><%= t("views.homepage.promoted.beginners_guide.subtitle") %></p>
              <p class="mt-3 text-base text-green-500"><%= t("views.homepage.promoted.beginners_guide.cta") %></p>
            </div>
          </div>
        </div>
      </a>
    </div>

  </div>

</div>
