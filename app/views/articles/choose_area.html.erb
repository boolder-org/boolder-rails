<% set_meta_tags title: t("views.articles.beginners_guide.choose_area.metas.title") %>
<% set_meta_tags og: { type: "website", image: image_url("hero-homepage.jpg") } %>

<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="text-lg max-w-prose mx-auto mb-16">
          <div class="pt-4 pb-16">
            <%= render 'pagination', prev_path: equipment_path, prev_text: "1. #{t('views.articles.beginners_guide.equipment.title')}", next_path: choose_problems_path, next_text: "3. #{t('views.articles.beginners_guide.choose_problems.title')}" %>
          </div>
        
          <span class="mt-3 sm:mt-4 block text-base text-center text-emerald-600 font-semibold tracking-wide uppercase">
            <%= t('views.articles.beginners_guide.title') %>
          </span>
          <h1>
            <span class="mt-2 block text-3xl text-center leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
              <%= t('views.articles.beginners_guide.choose_area.title') %>
            </span>
          </h1>
        </div>

        <div class="mt-6 prose prose-emerald prose-lg text-gray-500 mx-auto">
          <h2>
            <%= t('views.articles.beginners_guide.choose_area.beginner_friendly_areas') %>
          </h2>
          
          <p>
            <%= t('views.articles.beginners_guide.choose_area.p1_html') %>
          </p>

        </div>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="py-2 relative">
          <div class="flex flex-nowrap overflow-x-auto py-4 space-x-2 px-4 sm:px-6 lg:px-8">
            <% Area.with_ids_keep_order(@beginner_areas_ids).each do |area| %>
              <%= link_to area_path(area) do %>
                <%= render 'shared/area_card', area: area %>
              <% end %>
            <% end %>
            <div class="pr-16">&nbsp;</div>
            <div class="hidden lg:block inset-y-0 right-0 flex bg-gradient-to-l from-white pl-8 pr-8 pointer-events-none absolute"></div>
          </div>
        </div>
      </div>

      <div class="max-w-7xl mx-auto pb-8 px-4 sm:px-6 lg:px-8">
        
        <div class="mt-2 prose prose-emerald prose-lg text-gray-500 mx-auto">
          <p>
            <%= t('views.articles.beginners_guide.choose_area.p3_html') %>
            <span class="inline-flex text-emerald-500 align-middle" title="<%= t("sector.beginner_friendly") %>">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </span>
            .
          </p>

          <p>
            <%= t('views.articles.beginners_guide.choose_area.p4_html') %>
          </p>

        </div>

        <div class="pt-8 pb-8">
          <%= render 'pagination', prev_path: equipment_path, prev_text: "1. #{t('views.articles.beginners_guide.equipment.title')}", next_path: choose_problems_path, next_text: "3. #{t('views.articles.beginners_guide.choose_problems.title')}" %>
        </div>

        </div>
      </div>


</div>