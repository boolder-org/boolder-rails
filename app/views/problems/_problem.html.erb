<div class="flex flex-col rounded-lg shadow-lg overflow-hidden bg-white">
<%= link_to problem_path(problem), data: {'turbo-frame': '_top'} do %>
  <div class="flex-shrink-0">
    <% if line = problem.lines.published.first %>
      <%= image_tag(line.topo.photo.variant(resize_to_limit: [400, 400]), class: "h-96 sm:h-48 w-full object-cover", loading: "lazy") %>
    <% else %>
      <!-- <img class="h-48 w-full object-cover" src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=1679&amp;q=80" alt=""> -->
      <% end %>
  </div>
  <div class="flex-1 bg-white p-6 flex flex-col justify-between">
    <div class="flex-1 flex justify-between w-full">
      <div>
        <%= circle_view(problem) %>
        <span class="ml-2 font-medium"><%= problem.name %></span>
      </div>
      <div class="text-gray-500 ml-1">
        <%= problem.grade %>
      </div>
    </div>
  </div>
<% end %>
</div>