<div data-controller="reveal rotate">
  <a class="cursor-pointer" data-action="reveal#toggle rotate#toggle">
    <h3 class="<%= highlighted ? "text-green-500" : "text-gray-500" %> text-xs font-semibold text-gray-500 uppercase tracking-wider flex space-x-1 items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" data-rotate-target="item">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <%= name %>
    </h3>
  </a>
  <div class="mt-2 space-y-1 hidden <%= "sm:block" if highlighted %>" data-reveal-target="item">
    <%= capture(&block) %>
  </div>
</div>