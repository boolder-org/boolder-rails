<nav class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex px-2 lg:px-0">
        
        <div class="flex-shrink-0 flex items-center">
          <% if params[:contribute] %>
            <% url = if @problem && @problem[:id]
                  mapping_problem_path(id: @problem[:id])
                elsif @area
                  mapping_problems_path(area_id: @area.id)
                else
                  mapping_path
                end
             %>
            <%= link_to url do %>
              <div class="flex items-center text-sm font-medium text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
              </div>
            <% end %>
          <% elsif params[:sector7a] %>
            <%= link_to sector7a_path do %>
              <div class="flex items-center text-sm font-medium text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
              </div>
            <% end %>
          <% else %>
            <%= link_to root_localized_path do %>
              <%= image_tag 'logo.svg', class: "h-8 w-auto", alt:"Boolder" %>
            <% end %>
          <% end %>
        </div>
        
      </div>

      <%= render 'shared/search_modal', show_button: false %>
    </div>
  </div>

</nav>