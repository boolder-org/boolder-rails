<!-- This example requires Tailwind CSS v2.0+ -->

<%= link_to area_problems_path(area_id: @area.id), class: "block hover:bg-gray-50" do  %>    
<!-- <a href="#" class="block hover:bg-gray-50"> -->
  <div class="flex items-center px-2 py-2 sm:px-6">
    <div class="min-w-0 flex-1 flex items-center">
      <div class="flex-shrink-0">
        
        <svg class="h-5 w-5 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
</svg>
      </div>
      <div class="min-w-0 flex-1 px-4">
        <div>
          <p class="text-sm font-medium text-gray-900 truncate">Voir toutes les voies</p>
          <p class="flex items-center text-sm text-gray-500">
            
            <span class="truncate"><%= @area.problems.count %> voies</span>
          </p>
        </div>
      </div>
    </div>
    <div>
      <!-- Heroicon name: chevron-right -->
      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
<!-- </a> -->
<% end %>
    
