<!-- This example requires Tailwind CSS v2.0+ -->

<%= link_to area_path(area), class: "block hover:bg-gray-50" do  %>    
<!-- <a href="#" class="block hover:bg-gray-50"> -->
  <div class="flex items-center px-2 py-2 sm:px-6">
    <div class="min-w-0 flex-1 flex items-center">
      <div class="flex-shrink-0">
        
      </div>
      <div class="min-w-0 flex-1 px-4">
        <div>
          <p class="text-sm font-medium text-gray-900 truncate"><%= area.name %></p>
          <p class="flex items-center text-sm text-gray-500">
            
            <span class="truncate"><%= t("area.problems_count", count: area.problems.count) %></span>
          </p>
        </div>
      </div>
    </div>
    <div>
      <!-- Heroicon name: chevron-right -->
      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
<!-- </a> -->
<% end %>
    
