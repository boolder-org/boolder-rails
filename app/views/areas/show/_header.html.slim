div class="max-w-7xl mx-auto pt-6 px-4 sm:px-6 lg:px-8"
  = link_to "Fontainebleau", areas_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700"  
  h1 class="text-4xl font-bold mt-2 mb-4"= area.name

- klass_active = "border-green-500 text-green-600"
- klass_inactive = "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"

div class="max-w-7xl mx-auto sm:px-6 lg:px-8"
  div class="border-b border-gray-200 mb-4"
    nav class="-mb-px flex space-x-8" aria-label="Tabs"
      a href="#{area_path(area)}" class="#{selected == 0 ? klass_active : klass_inactive} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" Secteur
      a href="#{area_problems_path(area_id: area.id, level: 3)}" class="#{selected == 1 ? klass_active : klass_inactive} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" aria-current="page" Voies
      - if circuit = area.circuits.first
        a href="#{circuit_path(circuit)}" class="#{selected == 2 ? klass_active : klass_inactive} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" aria-current="page" Circuits
      a href="#" class="#{selected == 3 ? klass_active : klass_inactive} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" aria-current="page" Carte