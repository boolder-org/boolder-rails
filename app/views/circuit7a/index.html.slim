div class="max-w-7xl mx-auto sm:px-6 lg:px-8 mb-8"
  div class="lg:grid lg:grid-cols-2 lg:gap-16"
    div class="col-span-1"

      div class="px-4 sm:px-0 "

        div class="mt-8"
          = link_to circuit7a_map_path do
            div class="flex items-center space-x-2 text-green-600 my-2"
              svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              div= t("problem.see_on_map")

      div class=""
        / div class="flex items-center space-x-2 text-2xl font-bold mt-4 mb-4 pt-4"
        - i = 0
        - @areas.each do |area, problems|
          h2 class="px-4 sm:px-0 text-2xl font-bold mt-8 mb-2"= area
          ul role="list"
            - problems.each do |problem|
              - i = i + 1
              li class="px-4 sm:-mx-2 sm:px-2 hover:bg-gray-50 rounded-lg"
                = link_to problem_friendly_path(problem) do
                  div class="flex justify-between py-2"
                      div
                        span class="w-6 inline-block text-gray-400 font-medium"= "#{i}"
                        / = circle_view(i.to_s, background_color: "rgb(80% 80% 80%)", text_color: "#333")
                        span class="ml-2"= problem.name_with_fallback
                      div
                        div class="flex space-x-2"
                          div class="text-gray-500"
                            = problem.grade
                          