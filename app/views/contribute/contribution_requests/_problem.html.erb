<li class="px-4 sm:-mx-2 sm:px-2 hover:bg-gray-50 rounded-lg">
  <% if problem.bleau_info_id.present? %>
  <%= link_to [:contribute, problem] do %>
    <div class="flex justify-between py-2">
        <div>
          <%= problem_circle_view(problem) %>
          <span class="ml-2"><%= problem.name_with_fallback %></span>
          
        </div>
        <div>
          <div class="flex space-x-2">
            <% if show_featured && problem.featured %>
              <div class="text-red-400">
                <%= render 'svg/heart', width: 24, height: 24 %>
              </div>
            <% end %>
            <div class="">
              <span class="text-gray-500">
                <%= problem.grade %>
              </span>
              <!-- <%= problem.ascents.to_i %> -->
              <!-- <% if problem.ascents.to_i >= 5 %>
              <span class="text-green-500">prio</span>
              <% end %> -->
            </div>
            
          </div>
        </div>
    </div>
  <% end %>
  <% end %>
</li>
